# Database
DATABASE_URL=sqlite:///./database.db

# MongoDB (preferred for deployment)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/?retryWrites=true&w=majority&appName=<appName>
MONGODB_DB=order_to_delivery

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# App meta
APP_NAME=OrderProcessingAPI
APP_VERSION=1.0.0
ENVIRONMENT=development

# CORS
# Use JSON array format for multiple origins/methods/headers
CORS_ORIGINS=["http://localhost:3000"]
CORS_METHODS=["GET","POST","PATCH","OPTIONS"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=false

# Logging
LOG_LEVEL=INFO
